mixin personal(modifier)
  section.personal&attributes(attributes)
    .personal__area
      img(src='img/personal_photo.png' alt='Мария Малькова').personal__photo
      .personal__info
        p.personal__name Мария
        p.personal__surname Малькова
        p.personal__job HTML-верстальщик
      ul.personal__social
        li.personal__icon: include img/vk.svg
        li.personal__icon: include img/telegram.svg
        li.personal__icon: include img/git.svg
